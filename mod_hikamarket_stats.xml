<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>MOD_HIKAMARKET_STATISTIC</name>
    <author>Henrik Nielsen</author>
    <creationDate>March 2018</creationDate>
    <authorEmail>info@flexsus.dk</authorEmail>
	<authorUrl>www.flexsus.dk</authorUrl>
    <version>1.0.0</version>
    <description>MOD_HIKAMARKET_STATISTIC_DESCRIPTION</description>
    <files>
        <filename module="mod_hikamarket_stats">mod_hikamarket_stats.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>styles</folder>
		<folder>scripts</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_hikamarket_stats.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_hikamarket_stats.sys.ini</language>
		<language tag="da-DK">da-DK/da-DK.mod_hikamarket_stats.ini</language>
		<language tag="da-DK">da-DK/da-DK.mod_hikamarket_stats.sys.ini</language>
	</languages>
    <config>
    	<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_HIKAMARKET_STATS_CLASS_SUFFIX" description="MOD_HIKAMARKET_STATS_CLASS_SUFFIX_DESC" />
				<field name="show_total_vendors" type="radio" default="1" label="MOD_HIKAMARKET_STATS_SHOW_TOTAL_VENDORS" description="MOD_HIKAMARKET_STATS_SHOW_TOTAL_VENDORS_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>					
				</field>
				<field name="show_total_products" type="radio" default="1" label="MOD_HIKAMARKET_STATS_SHOW_TOTAL_PRODUCTS" description="MOD_HIKAMARKET_STATS_SHOW_TOTAL_PRODUCTS_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>					
				</field>
				<field name="show_total_shipped_orders" type="radio" default="1" label="MOD_HIKAMARKET_STATS_SHOW_TOTAL_SHIPPED_ORDERS" description="MOD_HIKAMARKET_STATS_SHOW_TOTAL_SHIPPED_ORDERS_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>					
				</field>
				<field name="show_total_online" type="radio" default="1" label="MOD_HIKAMARKET_STATS_SHOW_TOTAL_ONLINE" description="MOD_HIKAMARKET_STATS_SHOW_TOTAL_ONLINE_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>					
				</field>
			</fieldset>
		</fields>
    </config>
</extension>